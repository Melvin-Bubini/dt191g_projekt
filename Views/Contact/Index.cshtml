@{
    ViewData["Title"] = "Kontakt";

    <link rel="stylesheet" href="~/css/contactPage.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">
}

<section id="contact" class="container mt-5">
    <div class="content-wrapper">
        <div class="glow-circle circle-1"></div>
        <div class="glow-circle circle-2"></div>

        <h1 class="text-center mb-5 heading-animated">Kontakta mig</h1>

        <!-- Introduktion -->
        <div class="row text-center mb-5">
            <div class="col-12">
                <p class="lead text-white intro-text">Har du en spännande idé eller ett projekt? Jag är redo att skapa
                    något fantastiskt tillsammans! Kontakta mig via något av alternativen nedan. <br>
                    Ladda gärna ner mitt CV också!</p>
            </div>
        </div>

        <!-- Länk för nedladdning av CV -->
        <div class="row justify-content-center mb-5">
            <div class="col-md-6">
                <div class=" text-center p-4 ">
                    <button type="button" class="btn btn-primary w-100 submit-btn" id="downloadCvBtn">
                        Ladda ner CV <i class="bi bi-download"></i>
                    </button>
                </div>
            </div>
        </div>

        <!-- Kontaktmetoder -->
        <div class="row justify-content-center">
            <!-- Telefon -->
            <div class="col-md-3 mb-4">
                <div class="card text-center p-4 shadow-lg contact-card">
                    <div class="icon-container">
                        <i class="bi bi-telephone-fill text-primary"></i>
                    </div>
                    <h4 class="text-white">Telefon</h4>
                    <a class="contact-link">+46 331 718 35</a>
                </div>
            </div>

            <!-- E-post -->
            <div class="col-md-3 mb-4">
                <div class="card text-center p-4 shadow-lg contact-card">
                    <div class="icon-container">
                        <i class="bi bi-envelope-fill text-primary"></i>
                    </div>
                    <h4 class="text-white">E-post</h4>
                    <a href="mailto:melvin@bubini.com" class="contact-link">melvin@bubini.com</a>
                </div>
            </div>

            <!-- Instagram -->
            <div class="col-md-3 mb-4">
                <div class="card text-center p-4 shadow-lg contact-card">
                    <div class="icon-container">
                        <i class="bi bi-instagram text-primary"></i>
                    </div>
                    <h4 class="text-white">Instagram</h4>
                    <a href="https://www.instagram.com/bubinimelvin/" class="contact-link">@@bubinimelvin</a>
                </div>
            </div>

            <!-- LinkedIn -->
            <div class="col-md-3 mb-4">
                <div class="card text-center p-4 shadow-lg contact-card">
                    <div class="icon-container">
                        <i class="bi bi-linkedin text-primary"></i>
                    </div>
                    <h4 class="text-white">LinkedIn</h4>
                    <a href="https://www.linkedin.com/in/melvin-bubini-867082229/" class="contact-link">Melvin
                        Bubini</a>
                </div>
            </div>
        </div>

        <!-- Kontaktformulär -->
        <div class="row justify-content-center mt-5">
            <div class="col-md-8">
                <div class="form-container">
                    <h3 class="text-center mb-4">Skicka ett meddelande</h3>
                    <form id="contact-form" class="contact-form">
                        <div class="form-group mb-4">
                            <input type="text" class="form-control" id="title" placeholder="Titel på meddelandet"
                                name="title" required>
                            <label for="title" class="form-label">Titel på meddelandet</label>
                        </div>
                        <div class="form-group mb-4">
                            <input type="text" class="form-control" id="name" placeholder="Ditt namn" name="name"
                                required>
                            <label for="name" class="form-label">Ditt namn</label>
                        </div>
                        <div class="form-group mb-4">
                            <textarea class="form-control" id="message" rows="4" placeholder="Ditt meddelande"
                                name="message" required></textarea>
                            <label for="message" class="form-label">Ditt meddelande</label>
                        </div>
                        <div class="form-group mb-4">
                            <input type="email" class="form-control" id="email" placeholder="Din e-postadress"
                                name="email" required>
                            <label for="email" class="form-label">Din e-postadress</label>
                        </div>
                        <button type="submit" class="btn btn-primary w-100 submit-btn">
                            <span>Skicka meddelande</span>
                            <i class="bi bi-send-fill ms-2"></i>
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>
<script src="~/js/contact.js" asp-append-version="true"></script>
