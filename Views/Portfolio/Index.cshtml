@model IEnumerable<dt191g_projekt.Models.PortfolioModel>

@{
    ViewData["Title"] = "Portfölj";

    <link rel="stylesheet" href="~/css/portfolioPage.css" asp-append-version="true" />
}

<h1 class="portfolio-title">Mina Projekt</h1>
<div class="portfolio-grid">
<div id="particles-js" class="particles-container"></div>

    @foreach (var item in Model)
    {
        <div class="portfolio-card">
            <div class="card-content">
                <h2 class="card-title">@item.Title</h2>
                <p class="card-description">@item.Description</p>
                <p class="card-competence"><strong>Kompetenser lärda:</strong> @item.Competence</p>
                <div class="card-links">
                    @if (!string.IsNullOrEmpty(item.GithubLink))
                    {
                        <a href="@item.GithubLink" class="btn github-btn" target="_blank">GitHub</a>
                    }
                    @if (!string.IsNullOrEmpty(item.Url))
                    {
                        <a href="@item.Url" class="btn live-demo-btn" target="_blank">Webbsida</a>
                    }
                </div>
                <div class="crud-container">
                    @await Html.PartialAsync("_CrudPartial", item)
                </div>
            </div>
        </div>
    }
</div>
<script src="https://cdn.jsdelivr.net/particles.js/2.0.0/particles.min.js"></script>
<script src="~/js/particles.js"></script>
<script>
    document.addEventListener('DOMContentLoaded', function () {
        const cards = document.querySelectorAll('.portfolio-card');
        cards.forEach((card, index) => {
            card.style.setProperty('--index', index);
        });
    });
</script>
